<h1 class="title">New Entry</h1>

<div class="section">
  <%= simple_form_for @entry do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :list_id, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :score, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <%= f.button :submit, 'Create new entry', class: "button is-primary" %>
  <% end %>
</div>
