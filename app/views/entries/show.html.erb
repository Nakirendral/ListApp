<h1 class="title">Entry <%= @entry.id %></h1>

<div class="section">
  <p>
    Belongs to User <%= @entry.list.user.username %> within List <%= @entry.list.title %>
    <br>
    <%= @entry.content %>
    <br>
    Score: <%= @entry.score %>
    <br>
    <%= link_to 'Edit Entry', edit_list_entry_path(@list, @entry), class: 'button alt' %>
    <%= link_to 'Return to List', show_list_path(@list), class: 'button alt' %>
  </p> 
</div>
