<h1 class="title">New List</h1>

<div class="section">
  <%= simple_form_for @list do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :user_id, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <%= f.button :submit, 'Create new list', class: "button is-primary" %>
  <% end %>
</div>