<h1 class="title">List <%= @list.title %></h1>

<div class="section">
  <p>
    Belongs to User <%= @list.user_id %>
    <br>
    <%= @list.content %>
    <br>
    <% @list.entries.each do |entry| %>
      Entry: <%= entry.content %> || Score: <%= entry.score %>
      <%= link_to 'Edit Entry', edit_list_entry_path(@list), class: 'button alt' %>
      <br>
    <% end %>
    <br>
    <%= link_to 'Edit List', edit_list_path, class: 'button alt' %>
    <%= link_to 'Add New Entry', new_list_entry_path(@list, @entry), class: 'button alt' %>
  </p> 
</div>
