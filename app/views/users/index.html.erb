<h1 class="title">User Index</h1>

<table>
  <thead> 
    <tr>
      <th colspan="10">UserID</th>
      <th colspan="10">Username</th>
      <th colspan="10">First Name</th>
      <th colspan="10">Last Name</th>
      <th colspan="10">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to "Show", user %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
        <td><%= link_to "Delete", user, method: :destroy, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
